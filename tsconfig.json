{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext","dom"],
    "module": "commonjs",
    "sourceMap": true,
    "target": "esnext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
}
}
